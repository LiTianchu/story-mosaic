FROM node:22-bullseye

WORKDIR /app

# Copy package files for dependency caching
COPY package*.json ./

# Install dependencies (will be preserved in named volume)
RUN npm install --legacy-peer-deps

# Copy configuration files
# not really used in dev as it is handled by volume
# serve as redundancy for safety
COPY tsconfig*.json ./
COPY vite.config.ts ./
COPY eslint.config.js ./
COPY index.html ./
COPY src/ ./src/
COPY public/ ./public/

# Set up environment
ENV PATH="/app/node_modules/.bin:${PATH}"

# Expose port 3000 to match production
EXPOSE 3000

# Default command
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
